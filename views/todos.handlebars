<div class="row">
  <div class="col-4">
    <form>
      {{> section-title title="Add A Burger"}}
      <div class="form-group">
        <input class="form-control" type="text" id="todo-input" placeholder="Add your burger here"/>
        <button class="mt-1 btn btn-block btn-success" id="submit-btn">Add a Burger</button>
      </div>
    </form>
  </div>
  <div class="col-4">
    {{> section-title title="Burgers to Eat"}}
    <ul class="list-group">
    {{#each todoList}}
      {{#unless completed}}
        {{> todos/todo status="Not devoured"}}
      {{/unless}}
    {{/each}}
    </ul>
  </div>
  <div class="col-4">
    {{> section-title title="Devoured Burgers"}}
    <ul class="list-group">
      {{#each todoList}}
        {{#if completed}}
          {{> todos/todo status="devoured"}}
        {{/if}}
      {{/each}}
    </ul>
  </div>
</div>